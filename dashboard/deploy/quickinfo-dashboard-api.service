[Unit]
Description=QuickInfo Dashboard API
After=network.target

[Service]
Type=simple
User=bitnami
WorkingDirectory=/home/bitnami/quickinfo-autoblog/dashboard/backend
ExecStart=/home/bitnami/quickinfo-autoblog/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8003
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
